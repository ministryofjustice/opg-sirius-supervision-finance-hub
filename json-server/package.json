{
    "name": "mock-api",
    "version": "1.0.0",
    "license": "MIT",
    "scripts": {
        "serve": "concurrently --kill-others \"npm run start:server\" \"npm run watch:update\"",
        "start:server": "json-server -H 0.0.0.0 --watch config/db.json -m config/read-only.js -m config/switch-user.js -r config/routes.json",
        "watch:update": "onchange 'config/*.js' -- touch config/routes.json"
    },
    "author": "",
    "dependencies": {
        "concurrently": "^9.0.0",
        "json-server": "0.17.4",
        "onchange": "^7.1.0"
    }
}

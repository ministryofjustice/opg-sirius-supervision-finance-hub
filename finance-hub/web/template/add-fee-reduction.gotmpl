{{- /*gotype: github.com/ministryofjustice/opg-sirius-supervision-finance-hub/internal/server.UpdateFeeReductions*/ -}}
{{ template "page" . }}

{{ define "title" }}Award fee reduction{{ end }}

{{ define "main-content" }}
    {{ block "add-fee-reduction" .Data }}
        <div class="govuk-grid-row govuk-!-margin-top-5">
            <div class="govuk-grid-column-full">
                <header>
                    <h1 class="govuk-heading-l  govuk-!-margin-bottom-0  govuk-!-margin-top-0">Award fee reduction</h1>
                </header>
                {{ template "error-summary" .Errors }}
                <div class="govuk-grid-row">
                    <form
                        id="add-fee-reduction-form"
                        class="add-note govuk-grid-column-one-third"
                        method="post"
                        hx-post="{{ prefix (printf "/clients/%s/fee-reductions/add" .ClientId) }}"
                        hx-target="#main-content">
                        <input type="hidden" name="xsrfToken" value="{{ .AppVars.XSRFToken }}"/>

                        <div id="f-FeeType" class="govuk-form-group {{ if index .AppVars.Errors "FeeType" }}govuk-form-group--error{{ end }}">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend">Choose a fee reduction type</legend>
                                <span data-cy="fee-type-error">{{ template "error-message" (index .AppVars.Errors "FeeType") }}</span>
                                <div class="govuk-radios" data-module="govuk-radios">
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="remissionType" name="feeType" type="radio" value="remission" {{ if eq .FeeReductionFormValues.FeeType "remission" }}checked{{ end }}>
                                        <label class="govuk-label govuk-radios__label" for="remissionType">
                                            Remission
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="exemptionType" name="feeType" type="radio" value="exemption" {{ if eq .FeeReductionFormValues.FeeType "exemption"}}checked{{ end }}>
                                        <label class="govuk-label govuk-radios__label" for="exemptionType">
                                            Exemption
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="hardshipType" name="feeType" type="radio" value="hardship" {{ if eq .FeeReductionFormValues.FeeType "hardship"}}checked{{ end }}>
                                        <label class="govuk-label govuk-radios__label" for="hardshipType">
                                            Hardship
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div id="f-StartYear" class="govuk-form-group {{ if index .AppVars.Errors "StartYear" }}govuk-form-group--error{{ end }}">
                            <label class="govuk-label" for="startYear">
                                Start year
                            </label>
                            <span data-cy="start-year-error">{{ template "error-message" (index .AppVars.Errors "StartYear") }}</span>
                            <div id="start-year" class="govuk-hint">
                                <input class="govuk-input" id="startDateYear" name="startDateYear" style="width: 40%" type="number" {{ if ne .FeeReductionFormValues.StartYear "" }}value="{{.FeeReductionFormValues.StartYear}}"{{ end }}>
                            </div>
                        </div>

                        <div id="f-LengthOfAward" class="govuk-form-group {{ if index .AppVars.Errors "LengthOfAward" }}govuk-form-group--error{{ end }}">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend">
                                    How long is the award for?
                                </legend>
                                <span data-cy="award-length-error">{{ template "error-message" (index .AppVars.Errors "LengthOfAward") }}</span>
                                <div class="govuk-radios" data-module="govuk-radios">
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="threeYears" name="lengthOfAward" type="radio" value="3" {{ if eq .FeeReductionFormValues.LengthOfAward "3" }}checked{{ end }}>
                                        <label class="govuk-label govuk-radios__label" for="threeYears">
                                            Three years
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="twoYears" name="lengthOfAward" type="radio" value="2" {{ if eq .FeeReductionFormValues.LengthOfAward "2" }}checked{{ end }}>
                                        <label class="govuk-label govuk-radios__label" for="twoYears">
                                            Two years
                                        </label>
                                    </div>
                                    <div class="govuk-radios__item">
                                        <input class="govuk-radios__input" id="oneYear" name="lengthOfAward" type="radio" value="1" {{ if eq .FeeReductionFormValues.LengthOfAward "1" }}checked{{ end }}>
                                        <label class="govuk-label govuk-radios__label" for="oneYear">
                                            One year
                                        </label>
                                    </div>
                                </div>
                            </fieldset>
                        </div>

                        <div id="f-DateReceived" class="govuk-form-group {{ if index .AppVars.Errors "DateReceived" }}govuk-form-group--error{{ end }}">
                            <label class="govuk-label" for="dateReceived">
                                Date received
                            </label>
                            <span data-cy="date-received-error">{{ template "error-message" (index .AppVars.Errors "DateReceived") }}</span>
                            <input class="govuk-input govuk-input--width-10" id="dateReceived" name="dateReceived" type="date" {{ if ne .FeeReductionFormValues.DateReceived "" }}value="{{.FeeReductionFormValues.DateReceived}}"{{ end }}>
                        </div>

                        <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="1000">
                            <div id="f-Notes" class="govuk-form-group{{ if index .AppVars.Errors "Notes" }} govuk-form-group--error{{ end }}">
                                <label class="govuk-label" for="fee-reduction-notes">
                                    Reasons for fee reduction {{ template "error-message" (index .AppVars.Errors "Notes") }}
                                </label>
                                <textarea class="govuk-textarea govuk-js-character-count" id="fee-reduction-notes" name="notes" rows="10" aria-describedby="f-2-note-info notes-hint">
                                    {{- if ne .FeeReductionFormValues.Notes "" -}}{{.FeeReductionFormValues.Notes}}{{- end -}}
                                </textarea>
                            </div>
                            <div id="fee-reduction-notes-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                                You can enter up to 1000 characters
                            </div>
                        </div>
                        <div class="govuk-button-group govuk-!-margin-top-7">
                            <button class="govuk-button" data-module="govuk-button">
                                Save and continue
                            </button>
                            <a class="govuk-link"  href="{{ prefix (printf "/clients/%s/fee-reductions" .ClientId) }}">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{ end }}
{{ end }}

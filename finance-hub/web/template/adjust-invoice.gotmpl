{{- /*gotype: github.com/ministryofjustice/opg-sirius-supervision-finance-hub/internal/server.AdjustInvoice*/ -}}
{{ template "page" . }}

{{ define "title" }}Adjust invoice{{ end }}

{{ define "main-content" }}
    {{ block "adjust-invoice" .Data}}
        <div class="govuk-grid-row govuk-!-margin-top-5">
            <div class="govuk-grid-column-full">
                <header>
                    <h1 class="govuk-heading-l govuk-!-margin-top-0 govuk-!-margin-bottom-0">
                        Adjust invoice
                    </h1>
                </header>
                <div id="error-summary"></div>
                <div class="govuk-grid-row">
                    <form
                        id="adjust-invoice-form"
                        class="govuk-grid-column-one-third"
                        method="post"
                        hx-post="{{ prefix (printf "/clients/%s/invoices/%s/adjustments" .ClientId .InvoiceId) }}"
                        hx-target="#error-summary">
                        <input
                                type="hidden"
                                name="xsrfToken"
                                value="{{ .XSRFToken }}"/>

                        <div id="f-AdjustmentType" class="govuk-form-group">
                            <fieldset class="govuk-fieldset">
                                <legend class="govuk-fieldset__legend" id="adjustmentType">Choose an adjustment type</legend>
                                <span id="error-message__AdjustmentType"></span>
                                <div class="govuk-radios" data-module="govuk-radios">
                                    {{ range .AdjustmentTypes }}
                                        <div class="govuk-radios__item">
                                            <input class="govuk-radios__input {{ if .AmountRequired }}show{{else}}hide{{ end }}-input-field" id="{{.Key}}" name="adjustmentType"
                                                   type="radio" value="{{.Key}}">
                                            <label class="govuk-label govuk-radios__label"
                                                   for="{{.Key}}">{{.Translation}}</label>
                                        </div>
                                    {{ end }}
                                </div>
                            </fieldset>
                        </div>
                        <div class="govuk-character-count" data-module="govuk-character-count" data-maxlength="1000">
                            <div class="govuk-form-group" id="f-AdjustmentNotes">
                                <label class="govuk-label" for="notes">
                                    Reason for the adjustment
                                </label>
                                <span id="error-message__AdjustmentNotes"></span>
                                <textarea class="govuk-textarea govuk-js-character-count" id="notes" name="notes" rows="10" aria-describedby="f-2-note-info notes-hint"></textarea>
                            </div>
                            <div id="notes-info" class="govuk-hint govuk-character-count__message" aria-live="polite">
                                You have 1,000 characters remaining
                            </div>
                        </div>
                        <div class="hide" id="field-input">
                            <div class="govuk-form-group" id="f-Amount">
                                <label class="govuk-label govuk-body" for="amount">
                                    Amount
                                    <span id="error-message__Amount"></span>
                                </label>
                                <div class="govuk-input__wrapper"><div class="govuk-input__prefix" aria-hidden="true">Â£</div>
                                    <input class="govuk-input govuk-input--width-5" id="amount"  name="amount" type="text" spellcheck="false"></div>
                            </div>
                        </div>
                        <div class="govuk-button-group govuk-!-margin-top-7">
                            <button
                                    class="govuk-button"
                                    data-module="govuk-button">
                                Save and continue
                            </button>
                            <a class="govuk-link"  href="{{prefix (printf "/clients/%s/invoices" .ClientId) }}">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{ end }}
{{ end }}
